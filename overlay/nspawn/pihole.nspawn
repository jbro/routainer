[Exec]
Ephemeral=true
Hostname=pihole
LinkJournal=auto
PrivateUsers=0
NotifyReady=yes
Capability=CAP_IPC_LOCK

[Files]
BindReadOnly=/data/routainer/containers/pihole:/opt/routainer
BindReadOnly=/data/routainer/containers/pihole/network:/etc/systemd/network
Bind=/data/pihole/etc/pihole:/etc/pihole

[Network]
Bridge=linknet
